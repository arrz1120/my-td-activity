        #region 私有方法
        private int GetPageCount(int totalcount, int pageSize)
        {
            double divide = totalcount / pageSize;
            double floor = System.Math.Floor(divide);
            if (totalcount % pageSize != 0)
                floor++;
            int pageCount = Convert.ToInt32(floor);//总页数
            return pageCount;
        }
        #endregion

