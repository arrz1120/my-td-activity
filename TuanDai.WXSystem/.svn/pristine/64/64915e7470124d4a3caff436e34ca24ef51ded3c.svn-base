.login_banner{width: 100%;}
.alert{background: rgba(0,0,0,0.8);position: absolute;left: 0;top: 0; width: 100%;height: 100%;display: -webkit-box; display: -webkit-flex; display: flex; -webkit-box-pack: center;  -webkit-justify-content: center; justify-content: center; -webkit-box-align: center;  -webkit-align-items: center; align-items: center;}
.alert .con{background: url(/imgs/images/login_alert.png) no-repeat;width: 260px;height: 225px;background-size: 100% 100%;margin: 0 auto;position: relative;padding: 1px;}
.alert .link{display: block;margin: 180px auto;height: 26px;width: 100px;background: #ffe600;border-radius: 5px;color: #d62926;font-size: 13px;line-height: 26px;font-weight: bold;text-align: center;box-shadow:#da7a0a 0 2px 5px;}
.alert .close{background: url(/imgs/images/login_close.png) no-repeat;width: 13px;height: 13px;background-size: 100% 100%;right: 12px;top: 0;position: absolute;}