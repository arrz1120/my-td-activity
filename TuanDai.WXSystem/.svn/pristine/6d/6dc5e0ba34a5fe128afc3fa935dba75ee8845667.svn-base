body{background: #f1f7fe;}
.activity{padding-bottom: 40px;}
.bg-box{width: 100%;position: relative;}
.act_btn{display: block;position: absolute;width: 89%;border: 1px solid #f64462;color: #f64462;text-align: center;height: 42px;line-height: 42px;background: #fff;border-radius: 8px;left: 5.5%;bottom: 20px;font-size: 1.4rem;font-weight: 600;}
.con03{position: absolute;width: 100%;text-align: center;top: 40%;}
.con03 p{font-size: 1.2rem;color: #ffffff;margin-bottom: 10px;}
@media only screen and (min-width: 320px ) {
	.con03 p{font-size: 1.2rem;color: #ffffff;margin-bottom: 5px;}
}
.yuyue{padding: 0 10px;border: 1px solid #f64462;color: #f64462;background: #fff;border-radius: 8px;position: absolute;right: 15px;top: 50%;height: 30px;line-height: 30px;font-size: 1.2rem;margin-top: -15px;}

.con04{padding: 0 5.5%;}
.con04Wrap{background: url('/imgs/member/con04_bg.png') left top no-repeat;padding: 20px 0;}
.notice{height: 46px;line-height: 46px;background: url('/imgs/member/notice.png') left top no-repeat;background-size: 100% 100%;padding: 0 20px;box-sizing: border-box;width: 100%;position: relative;}
.notice .userN{position: absolute;left: 20px;font-size: 1.3rem;color: #fff;float: left;width: 70%;height: 46px;line-height: 46px;}
.notice .lessChance{position: absolute;right: 20px;font-size: 1.3rem;color: #fff;float: right;height: 46px;line-height: 46px;text-align: right;padding-left: 50px;}
.notice .userN span{color: #ffd800;font-size: 1.3rem;}
.notice .lessChance span{color: #ffd800;font-size: 1.3rem;width: 40px;height: 30px;border-radius: 6px;display: block;background: url('/imgs/member/chance.png') left top no-repeat;background-size: 100% 100%;margin-top: 8px;line-height: 30px;text-align: center;position: absolute;left: 0;}
@media only screen and (max-width: 359px ) {
	.notice .userN,
	.notice .lessChance,
	.notice .userN span,
	.notice .lessChance span{font-size: 1rem;}
}
.choujiang{margin-top: 30px;}
.choujiang .flx-row .mr15{margin-right: 15px;}
.choujiang .flx-row .mb15{;margin-bottom: 15px;}
.choujiang .flx-row{display: -webkit-box;-webkit-box-orient: horizontal;}
.choujiang .flx-row .flx{-webkit-box-flex: 1;}
.activity_rule{margin-top: 20px;}
.activity_rule p{color: #fff;font-size: 1.1rem;line-height: 2rem;padding-left: 18px;background: url('/imgs/member/tuoyuan.png') left 8px no-repeat;background-size: 7px 7px;}
.con04_btn{display: block;width: 100%;border: 1px solid #f64462;color: #f64462;text-align: center;height: 42px;line-height: 42px;background: #fff;border-radius: 8px;font-size: 1.4rem;font-weight: 600;margin-top: 20px;}
.slide{padding: 13px 5.5% 0;}
/*.swiper-container{box-shadow: 1px 1px 1px #e7ecf3;}*/
.swiper-slide{background: #fff;padding: 5px 10px 0;}
.slideTxt{height: 44px;line-height: 44px;text-align: center;font-size: 1.25rem;color: #42424f;background: #fff;}
.mark{width: 100px;margin: 10px auto;}
.swiper-pagination-bullet{width: 10px;height: 10px;border: 1px solid #5187ea;border-radius: 50%;float: left;margin-right: 10px;background: #fff;}
.swiper-pagination-bullet-active{background: #5187ea;}
.mt10{margin-top: 10px;}



#lottery {border-collapse:collapse;  }
#lottery table td{text-align:center;vertical-align:middle; padding:2px;}
#lottery table td.Lucky_draw{}
#lottery table td a{display:block;}
#lottery table td.active{ background: url(/Activity/XinXingFansMeetAndGreet/images/active.png?v=20150810) no-repeat 0px 0px;}













