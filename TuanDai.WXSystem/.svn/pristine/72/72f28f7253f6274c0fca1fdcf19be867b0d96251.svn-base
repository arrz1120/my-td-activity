@charset "utf-8";
html,body,h1,h2,h3,p,span,a,div,ol,ul,li,dl,dt,dd,table,tbody,tfoot,thead,tr,th,td,input,textarea, form,article,aside,details,figcaption,figure,footer,header,hgroup,nav,section { margin: 0; padding: 0; font: 12px/2rem 'Microsoft Yahei', Arial, Verdana, Helvetica, sans-serif; -webkit-tap-highlight-color: rgba(0,0,0,0); color: #545454;box-sizing: border-box;}
body { background: #fbfbf9; -webkit-text-size-adjust: none; width: 100%;height:100%;-webkit-tap-highlight-color:rgba(0,0,0,0);}
em, i, b, strong { font-style: normal; font-weight: normal;}
input, textarea { outline: 0;}
input,textarea,select{-webkit-border-radius: 0; appearance:none;-moz-appearance:none; -webkit-appearance:none;}
article,aside,details,figcaption,figure,footer,header,hgroup,nav,section{display: block;}
img {  border:0; -ms-interpolation-mode:bicubic; max-width:100%; vertical-align:middle;}
.hide {display: none;}
a{text-decoration: none; color: #3e3d3d;}
.pos-r{ position: relative;}
.pos-a{ position: absolute;}
.imgBox{ text-align: center;}
/*浮动、清除浮动*/
.lf{float:left;}
.rf{float:right;}
.clearfix {zoom:1;}
.clearfix:after{content:'.'; display:block; visibility:hidden; clear:both; height:0;}
.hidden{ display: none !important;}
.block{ display: block!important;}


/*投资红包兑换页*/
.wrapper{background: url("../imgs/bg.jpg") no-repeat center;background-size: cover;width: 100%;height: 100%;position: absolute;}
.main{width: 100%;height: 100%;text-align: center;padding-top: 4.5em;}
.main .logo{max-width: 100px;max-height: 30px; margin:1.5em auto 2.5em auto;display: block;}
.main .p1{max-width: 250px;max-height: 56px;display: block;margin: 0 auto;}
.form-box{padding: 0 35px;text-align: center;margin: 3.5em auto 0;}
.form-box p{text-align: left; font-size:1.3rem; color: #7a7a7a;}
.form-box p span{font-size:1.3rem; color: #7a7a7a; margin-left: 0.3em;}
.form-box input{display: block;margin: 0.5em auto;border: 0;}
.form-box .exch-code{width: 100%;height: 35px;; line-height: 35px;text-indent: 10px;border: 1px solid #b8e4f9; font-size: 1.3rem; margin-bottom: 2em;}
.form-box .sub-but{ width: 200px; height: 45px; line-height: 45px;-webkit-border-radius: 4px; -moz-border-radius: 4px; border-radius: 4px; background: #ffcf1f; font-size: 1.5rem; color: #ffffff;}
.main .png-b{display:block;width: 216px; height: 18px;left:50%; margin-left: -108px;bottom: 25px;}

/*兑换成功*/
.main .p2{max-width: 180px;max-height: 36px;display: block;margin: 0 auto;}
.main .seuc-text{ font-size: 1.2rem; color: #636363;line-height: 140%;margin:1.5em auto 2.5em auto;}
.link-box{margin: 4.8em auto 0;}
.link-box a{display: block;max-width: 230px; max-height: 60px;font-size: 1.5rem; color: #ffffff; line-height: 45px;-webkit-border-radius: 4px; -moz-border-radius: 4px; border-radius: 4px; }
.link-box .dl-app{ background-color: #ffcf1f;margin: 0 auto;}
.link-box .in-td{  background-color: #ffb31f;margin: 1.5em auto 0;}

/*兑换失败*/
.main .fail-text{ font-size: 1.2rem; color: #636363;line-height: 140%;margin:1.5em auto 2.5em auto;}
.link-box .tel-link{ height: 60px; line-height:100%;background-color: #ffcf1f;margin: 0 auto;padding: 15px 0;}

@media screen and (max-device-height: 480px) {
    .main{padding-top: 3em;}
    .form-box{margin: 1.5em auto 0;}
    .link-box{margin: 4.5em auto 0;}
    .form-box .exch-code{margin-bottom: 1.5em;}
    }

@media only screen and (min-device-width : 320px) and (max-device-width : 568px) {
    .main{padding-top: 4em;}
    .form-box{margin: 4em auto 0;}
    .link-box{margin: 5em auto 0;}
    .form-box .exch-code{margin-bottom: 2.5em;}
    }

@media (device-width:375px) and (-webkit-min-device-pixel-ratio:2){
    .main{padding-top: 4em;}
    .form-box{margin: 4.5em auto 0;}
    .link-box{margin: 6.5em auto 0;}
    .form-box .exch-code{margin-bottom: 2.5em;}
    }

@media (device-width:414px) and (-webkit-min-device-pixel-ratio:3.0){
    .main{padding-top: 5em;}
    .form-box{margin: 5.5em auto 0;}
    .link-box{margin: 7em auto 0;}
    .form-box .exch-code{margin-bottom: 3.5em;}
    }