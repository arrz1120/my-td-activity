        params += "#_loginLayer_" + (new Date()).valueOf();
        nwbi_api.nwbi_logWebEvent(nwbi_userName, getNowFormatDate(), 'BigDatasina', '新浪分享', '160330', 1, '', '', 'TDW_WX');
        window.open("http://service.weibo.com/share/share.php?" + params);
    }

