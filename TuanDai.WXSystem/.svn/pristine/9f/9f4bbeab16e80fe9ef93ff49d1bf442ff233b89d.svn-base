input{-webkit-border-radius: 0; -webkit-appearance: none;border: 0;outline: none;}
 
/*弹框样式*/
/*浮动、清除浮动*/
.lf{float:left;}
.rf{float:right;}
.clearfix {zoom:1;}
.clearfix:after{content:'.'; display:block; visibility:hidden; clear:both; height:0;}
.hide { display: none; }
/**遮罩层***************/
.maskLayer{ height: 100%; width: 100%; background: rgba(0,0,0,.5); position: fixed; top: 0; left: 0; z-index: 1000;}
/********弹窗***********/
.h40{ height: 40px!important; line-height: 40px!important;}
.automaticwayBox{width:100%; background-color: #fff; padding-top: 5px;position: fixed; left: 0;  z-index: 1010;}
.automaticwayBox li{ border-bottom: 1px solid #ccc;padding-left: 15px; padding-right: 15px; }
.automaticwayBox li span{ height: 60px; line-height: 60px;font-size: 1.4rem;display: inline-block;vertical-align: middle;}
.ico-exclamation40{ display: inline-block; width: 40px; height: 40px; background: url(/imgs/images/ico_exclamation_big.png); background-size: 40px; vertical-align: middle;}
.btnYellow{background-color: #ffcf1f;}/*黄色按钮*/
.btnRed{background-color: #fd6040;}/*红色按钮*/
.btnGreen{background-color: #93d94e;}/*绿色按钮*/


/*按钮组合形式使用*/
.btnstyle{ cursor:pointer; display:block;width:100%; height:42px; line-height:42px;border: 0; box-shadow: none; font-size: 1.7rem; color: #fff; text-align:center;-moz-border-radius: 4px;-webkit-border-radius: 4px;border-radius: 4px;-moz-background-clip: padding;-webkit-background-clip: padding-box;background-clip: padding-box;}/*通用按钮*/
.userBtn{display:block;width:100%; font-size: 1.6rem; color: #fff; text-align:center; border: 0; height: 38px;line-height:38px;-moz-border-radius: 4px;-webkit-border-radius: 4px;border-radius: 4px;}/*我的账户通用按钮*/
.btnstyle:visited,.btnstyle:link,.btnstyle:active,.btnstyle:hover,.userBtn:visited{ color: #fff;}
 

/*分享到微信*/
.sharepop{display:none;width:223px;height:83px;background:url(../images/sharepop_text.png);background-size:223px 83px;position:absolute;top:40px;right:30px;z-index:50;}
.sharepop2 { width: 100%; height: 100%; background: url("../images/sharepop_text.png") no-repeat center; background-size: cover; display: none; position: absolute; top: 0; left: 0; bottom: 0; right: 0; z-index: 300 }
.sharepop-close { width: 82px; height: 82px; background: rgba(255,0,0,.6); border-radius: 50%; display: block; position: absolute; top: -70px; right: -65px }
.sharepop-close::after, .sharepop-close::before { width: 30px; height: 4px; background-color: #fff; border-radius: 2px; content: ''; display: block; position: absolute; bottom: 25px; left: 15px; -webkit-transform: rotateZ(45deg) }
.sharepop-close::before { -webkit-transform: rotateZ(-45deg) }
.sharepop-close::after { -webkit-transform: rotateZ(45deg) }
.animated.slideInRight.show-close { -webkit-animation-delay: 0.5s }