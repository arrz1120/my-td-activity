<script type="text/javascript" src="/scripts/jquery.min.js"></script>
<script type="text/javascript" src="/scripts/swiper.3.1.7.jquery.min.js"></script>
<script type="text/javascript">
	
    $(function () {
        var url = window.location.href;
        if (url.indexOf("type=mobileapp") >= 0) {
            document.getElementById("header").style.display = "none";
        }
        var tabsSwiper = new Swiper('#tabs-container',{
            speed:500,
            onSlideChangeStart: function(){
                $(".tabs .active").removeClass('active');
                $(".tabs a").eq(tabsSwiper.activeIndex).addClass('active')
            }
        });
        $(".tabs a").on('touchstart mousedown',function(e){
            e.preventDefault();
            $(".tabs .active").removeClass('active');
            $(this).addClass('active');
            tabsSwiper.slideTo( $(this).index() )
        });
        $(".tabs a").click(function(e){
            e.preventDefault();
        });

//        关于团队弹窗
		$(".showAlert").css('top',($('#bannerImg').height()-15)/2-5).click(function(){
            $("#alert").addClass('block').bind("touchmove", function(e) {
                e.preventDefault();
            });
		});

        $('#alert').click(function() {
            $(this).toggleClass("block");
        });

        //公务员方案弹窗
        $(".ico1").click(function(){
            $("#gwyAlert").addClass('block').bind("touchmove", function(e) {
                e.preventDefault();
            });
        });

        $('#gwyAlert').click(function() {
            $(this).toggleClass("block");
        });

        //精英方案弹窗
        $(".ico2").click(function(){
            $("#jyAlert").addClass('block').bind("touchmove", function(e) {
                e.preventDefault();
            });
        });

        $('#jyAlert').click(function() {
            $(this).toggleClass("block");
        });

        //保单方案弹窗
        $(".ico3").click(function(){
            $("#bdAlert").addClass('block').bind("touchmove", function(e) {
                e.preventDefault();
            });
        });

        $('#bdAlert').click(function() {
            $(this).toggleClass("block");
        });

        //公积金方案弹窗
        $(".ico4").click(function(){
            $("#gjjAlert").addClass('block').bind("touchmove", function(e) {
                e.preventDefault();
            });
        });

        $('#gjjAlert').click(function() {
            $(this).toggleClass("block");
        });

    });

</script>

